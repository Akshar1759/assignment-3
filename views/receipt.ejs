<main>

    <div class="con2">

        <table>
            <tr>
                <th>Name :</th>
                <td>
                    <%= order.name %>
                </td>
            </tr>
            
            <tr>
                <th>Phone :</th>
                <td>
                    <%= order.phone %>
                </td>
            </tr>
            
            <tr>
                <th>
                    Mango Juices
                </th>
                <td>
                    <%= order.product1 * 2.99 %>
                </td>
            </tr>
            <tr>
                <th>
                    Berry Juices
                </th>
                <td>
                    <%= order.product2 * 1.99 %>
                </td>
            </tr>
            <tr>
                <th>
                    Apple Juices
                </th>
                <td>
                    <%= order.product3 * 2.49 %>
                </td>
            </tr>
            
            <tr>
                <th>Sub Total :</th>
                <td>
                    <%= order.grossAmt %>
                </td>
            </tr>
            <tr>
                <th>Tax :</th>
                <td>
                    <%= order.taxAmount %>
                </td>
            </tr>
            <tr>
                <th>Total :</th>
                <td>
                    <%= order.totalCost %>
                </td>
            </tr>

        </table>

        
    </div>
</main>

